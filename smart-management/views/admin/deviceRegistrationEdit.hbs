<div class="movap-titulo">
    <h4 align="left">CADASTRO DOS APARELHOS</h4>
    <hr>
</div>
<form action="/device/{{device.id}}" method="POST">
    <div class="form-group col-lg-4">
        <p class="movap-nomes" align="left">Número do Lote</p>
        <input type="text" class="form-control " id="intentificação" name="device[numLot]" value="{{device.numLot}}">
    </div>

    <div class="form-group col-lg-4">
        <p class="movap-nomes" align="left">Número de identificação</p>
        <input type="text" class="form-control" id="intentificação" name="device[numId]" value="{{device.numId}}">
    </div>

    <div class="form-group col-lg-4">
        <p class="movap-nomes" align="left">Data de Fabricação</p>
        <input type="date" class="form-control" id="datamov" name="device[dateFab]" value="{{device.dateFab}}">
    </div>
    <div class="form-group col-lg-4">
        <p class="movap-nomes" align="left">Fornecedor</p>
        <input type="text" class="form-control" name="device[provider]" value="{{device.provider}}">
    </div>
    <div class="row">
        <div class="d-flex pl-3  movap">
            <button type="submit" class="mr-auto p-2 btn btn-primary">CONFIRMAR</button>
        </div>
</form>
<div class="d-flex pl-3  movap">
    <form action="/device/delete/{{device.id}}" method="POST">
        <button type="submit" class="mr-auto p-2 btn btn-primary"
            onclick="return confirm('Você têm certeza que deseja excluir o aparelho {{device.numId}}?')"
            id="excluir">EXCLUIR</button>
    </form>
</div>
</div>
<br><br><br><br>
<script src="/javascripts/clients-dropdown.js"></script>