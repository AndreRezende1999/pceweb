<script src="/javascripts/search.js"></script>
<script src="/javascripts/dashboard.js"></script>
<script src="/javascripts/jquery.js" charset="utf-8"></script>

<div class="movap-titulo">
  <h4 align="left">LISTA DE CLIENTES</h4>
  <hr>
</div>
<div class="col">
  <div class="row">
    <div class="col-lg-5">
      <div class="bg clearfix col">
        <button type="button" class="btn btn-primary btn-info  btn-secondary " aria-haspopup="true"
          aria-expanded="false" /><a style="color:#ffffff" href="/client/signup">NOVO</a></button>
      </div>
      <br>
      <div class="input-group">
        <input id="myInput" class="form-control" type="text" onkeyup="searchW();" placeholder="Pesquisar"
          aria-label="Search">
        <div class="input-group-append">
          <button class="btn btn-outline-secondary" type="button">
            <i class="fa fa-search"></i>
          </button>
        </div>
      </div>

      <table class="table table-bordered table-responsive-sm mt-4">
        <tbody id="myTable" class="element">
          {{#each clients}}
          <tr>
            <th scope="row" class="font-book text-center" onclick="location.href='/client/edit/{{id}}'">{{nameContact}}
            </th>
            <th width="50" scope="row" class="font-book text-center" onclick="location.href='/client/edit/{{id}}'">. . .
            </th>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
</div>
<br>
<script type="text/javascript" src="/javascripts/edit.js">  </script>