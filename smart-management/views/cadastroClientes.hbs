<div class="movap-titulo">
  <h4 align="left">CADASTRO DE CLIENTES</h4>
  <hr>
</div>

<form action="/cadastroClientes" method="post">
  <div class="form-group col-8">
    <p class="movap-nomes" align="left">Código do Cliente</p>
    <input type="text" class="form-control" id="intentificação" name="Clientes[codCliente]"placeholder="">
  </div>
  <div class="form-group col-8">
    <p class="movap-nomes" align="left">Razão Social</p>
    <input type="text" class="form-control" id="intentificação" name="Clientes[razaoSocial]"placeholder="">
  </div>
  <div class="form-group col-8">
    <p class="movap-nomes" align="left">Nome Fantasia</p>
    <input type="text" class="form-control" id="intentificação" name="Clientes[nomeFantasia]"placeholder="">
  </div>
  <div class="form-group col-8">
    <p class="movap-nomes" align="left">CNPJ</p>
    <input type="number" class="form-control" id="intentificação" name="Clientes[cnpj]"placeholder="">
  </div>
  <div class="form-group col-8">
    <p class="movap-nomes" align="left">Endereço</p>
    <input type="text" class="form-control" id="intentificação" name=""placeholder="">
  </div>
  <div class="form-group col-8">
    <p class="movap-nomes" align="left">E-mail</p>
    <input type="email" class="form-control" id="intentificação" name="Clientes[email]" placeholder="">
  </div>
  <div class="form-group col-8">
    <p class="movap-nomes" align="left">Telefone</p>
    <input type="tel" class="form-control" id="intentificação" name="Clientes[telefone]"placeholder="">
  </div>
  <div class="form-group col-8">
    <p class="movap-nomes" align="left">Nome para contato</p>
    <input type="text" class="form-control" id="intentificação" name="Clientes[nomeContato]"placeholder="">
  </div>
  <div class="form-group col-8">
    <p class="movap-nomes" align="left">Status</p>
    <select class="form-control" id="exampleFormControlSelect1" name="Clientes[status]">
      <option>Ativo</option>
      <option>Outros</option>
    </select>
  </div>
  <div class="form-group justify-content-start col-md-8 d-flex movap">
    <input type="submit" value="CONFIRMAR" class="btn btn-primary" >
  </div>
</form>
