<div class="movap-titulo">
  <h4 align="left">MOVIMENTAÇÃO DOS APARELHOS</h4>
  <hr>
</div>

<form>
  <div class="form-group col-4">
    <p class="movap-nomes" align="left">Número de Indentificação</p>
    <input type="text" class="form-control movap-boxcinza" id="intentificação" name="devices[numId]" placeholder="">
  </div>
  <div class="form-group col-4">
    <p class="movap-nomes" align="left">Status</p>
    <select class="form-control" id="exampleFormControlSelect1">
      <option>Estoque</option>
      <option>Outros</option>
    </select>
  </div>
  <div class="form-group col-4">
    <p class="movap-nomes" align="left">Data da Movimentação</p>
    <input type="date" class="form-control" id="datamov" name="devices[dateMov]" placeholder="">
  </div>
  <div class="form-group col-4">
    <p class="movap-nomes" align="left">Observações</p>
    <textarea class="form-control" id="exampleFormControlTextarea1" name=" devices[obs]" rows="4"></textarea>
  </div>
  <div class="form-group justify-content-start col-md-8 d-flex movap">
    <input type="submit" value="CONFIRMAR" class="btn btn-primary" >
  </div>

</form>
