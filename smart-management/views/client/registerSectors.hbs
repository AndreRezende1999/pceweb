<div class="movap-titulo">
  <h4 align="left">CADASTRO DE SETORES</h4>
  <hr>
</div>

<form action="/sector/signup" method="post">
  <div class="form-group col-8">
    <p class="movap-nomes" align="left">Código do Setor</p>
    <input type="text" class="form-control" id="intentificação" name="sector[codSector]" required>
  </div>
  <div class="form-group col-8">
    <p class="movap-nomes" align="left">Nome</p>
    <input type="text" class="form-control" id="intentificação" name="sector[name]" required>
  </div>
  <div class="form-group col-8">
    <p class="movap-nomes" align="left">Gestor</p>
    <select class="form-control" name="sector[idManager]" required>
      {{#each managers}}
      <option value="{{id}}">{{name}}</option>
      {{/each}}
    </select>
  </div>
  <div class="form-group justify-content-start col-md-8 d-flex movap">
    <input type="submit" value="CONFIRMAR" class="btn btn-primary">
  </div>
</form>
