<div class="movap-titulo">
  <h4 align="left">CADASTRO DE ESTAÇÕES DE APARELHOS</h4>
  <hr>
</div>


<div class="col">
    <div class="row">
        <div class="col-lg-8">
            <form action="/station/{{station.id}}" class="col-lg-10" method="post">
                <div class="form-group col-lg-8">
                    <p class="movap-nomes" align="left">Código da Estação</p>
                    <input type="text" class="form-control" id="intentificação" name="station[codeStation]" value={{station.codeStation}} readonly>
                </div>
                <div class="form-group col-lg-8">
                    <p class="movap-nomes" align="left">Código do Aparelho</p>
                    <input type="text" class="form-control" id="intentificação" name="station[deviceNumber]" value={{station.idesp}}>
                </div>
                <div class="form-group col-lg-8">
                    <p class="movap-nomes" align="left">Nome do Colaborador</p>
                    <input type="text" class="form-control" id="intentificação" name="station[nameEmployed]" value={{station.nameEmployed}}>
                </div>
                <div class="form-group col-lg-8">
                    <p class="movap-nomes" align="left">Tempo de tolerância para uso do aparelho</p>
                    <input type="time" class="form-control" id="intentificação" name="station[toleranceTime]" value={{station.toleranceTime}}>
                </div>
                <div class="form-group col-lg-8">
                    <p class="movap-nomes" align="left">Status</p>
                    <select class="form-control" id="exampleFormControlSelect1" name="station[status]" value={{station.status}}>
                    <option>Trabalho</option>
                    <option>Férias</option>
                    <option>Atestado</option>
                    <option>Falta</option>
                    </select>
                </div>
                <div class="form-group col-lg-8">
                    <p class="movap-nomes" align="left">Horário de entrada</p>
                    <input type="time" class="form-control" id="intentificação" name="station[inputHour]" value={{station.inputHour}}>
                </div>
                <div class="form-group col-lg-8">
                    <p class="movap-nomes" align="left">Horário de saída</p>
                    <input type="time" class="form-control" id="intentificação" name="station[outputHour]" value={{station.outputHour}}>
                </div>
                <div class="form-group col-lg-8">
                    <p class="movap-nomes pb-2" align="left">Dias da Semana</p>
                    {{#compare station.weekday.monday 1}}
                    <input type="checkbox" checked name='station[weekday][monday]' value={{station.weekday.monday}}>Segunda</input>
                    {{else}}
                    <input type="checkbox"  name='station[weekday][monday]' value={{station.weekday.monday}}>Segunda</input>
                    {{/compare}}

                    {{#compare station.weekday.tuesday 1}}
                    <input type="checkbox" checked name='station[weekday][tuesday]' value={{station.weekday.tuesday}}>Terça</input>
                    {{else}}
                    <input type="checkbox" name='station[weekday][tuesday]' value={{station.weekday.tuesday}}>Terça</input>
                    {{/compare}}

                    {{#compare station.weekday.wednesday 1}}
                    <input type="checkbox" checked name='station[weekday][wednesday]' value={{station.weekday.wednesday}}>Quarta</input>
                    {{else}}
                    <input type="checkbox" name='station[weekday][wednesday]' value={{station.weekday.wednesday}}>Quarta</input>
                    {{/compare}}

                    {{#compare station.weekday.thursday 1}}
                    <input type="checkbox" checked name='station[weekday][thursday]' value={{station.weekday.thursday}}>Quinta</input>
                    {{else}}
                    <input type="checkbox" name='station[weekday][thursday]' value={{station.weekday.thursday}}>Quinta</input>
                    {{/compare}}

                   
                    {{#compare station.weekday.friday 1}}
                    <input type="checkbox" checked name='station[weekday][friday]' value={{station.weekday.friday}}>Sexta</input>
                    {{else}}
                    <input type="checkbox"  name='station[weekday][friday]' value={{station.weekday.friday}}>Sexta</input>
                    {{/compare}}

                    {{#compare station.weekday.saturday 1}}
                    <input type="checkbox" checked name='station[weekday][saturday]' value={{station.weekday.saturday}}>Sábado</input>
                    {{else}}
                    <input type="checkbox"  name='station[weekday][saturday]' value={{station.weekday.saturday}}>Sábado</input>
                    {{/compare}}

                    {{#compare station.weekday.sunday 1}}
                    <input type="checkbox" checked name='station[weekday][sunday]' value={{station.weekday.sunday}}>Domingo</input>
                    {{else}}
                    <input type="checkbox"  name='station[weekday][sunday]' value={{station.weekday.sunday}}>Domingo</input>
                    {{/compare}}
                </div>  
                <div class="row">
                    <div class="d-flex pl-3  movap">
                        <button type="submit"  class="mr-auto p-2 btn btn-primary" >CONFIRMAR</button>
                    </div>
                </form>
                    <div class="d-flex pl-3  movap">
                        <form action="/station/delete/{{station.id}}" method="POST">
                            <button type="submit"  class="mr-auto p-2 btn btn-primary" onclick="return confirm('Você têm certeza que deseja excluir essa ESTAÇÃO?')" id="excluir" >EXCLUIR</button>
                        </form> 
                    </div>
                </div>           
                    
            </div>
            
        </div>
    </div>
</div>
<br><br><br><br><br><br>


