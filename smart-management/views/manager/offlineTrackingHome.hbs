                        <th scope="row" class="font-book text-center col-4" onclick="location.href='/offlineTracking/user/{{id}}'">{{status}}</th>
                        <th width="40" scope="row" class="font-book text-center col-4" onclick="location.href='/offlineTracking/user/{{id}}'">. . .</th>
