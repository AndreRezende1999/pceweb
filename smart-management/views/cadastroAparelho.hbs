<h1>Cadastro de Aparelhos</h1>

<form>
    <div class="form-group input-group-lg d-flex justify-content-center ">
      <div class="col-md-5">
        <label class="text-left" for="numberlote">Número do Lote </label>
        <input type="text" class="form-control input-lg" id="numberlote" >
      </div>
    </div>
    <div class="form-group input-group-lg d-flex justify-content-center" >
      <div class="col-md-5">
        <label for="numberid">Número de identificação</label>
        <input type="text" class="form-control input-lg" id="numberid" >
      </div>
    </div>
    <div class="form-group input-group-lg d-flex justify-content-center" >
      <div class="col-md-5 ">
       <label for="datefab">Data de fabricação</label>
       <input type="text" class="form-control input-lg" id="datefab">
      </div>
    </div>
    <div class="form-group input-group-lg d-flex justify-content-center" >
       <div class="col-md-5 ">
       <label for="forne">Fornecedor</label>
       <input type="text" class="form-control input-lg" id="forne">
      </div>
    </div>
    <br>
    <div class="form-group d-flex justify-content-start">
      <div class="col-md-8">
        <input type="submit" value="CONFIRMAR" class="btn btn-primary" >  
      </div>
    </div>
</form>

